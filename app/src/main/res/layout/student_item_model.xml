<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="12dp"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/idTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="ID: "
        android:textSize="28sp"
        android:layout_margin="12dp"
        android:textColor="@color/purple_700"
        />

    <TextView
        android:id="@+id/idEnteredTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/idTV"
        android:layout_margin="18dp"
        tools:text="123"
        android:textColor="@color/blue"
        android:textSize="20sp"
        />

    <View
        android:id="@+id/firstLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/idTV"
        android:background="@color/black"
        android:layout_margin="12dp"/>


    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstLine"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Name: "
        android:textSize="28sp"
        android:layout_margin="12dp"
        android:textColor="@color/purple_700"
        />

    <TextView
        android:id="@+id/nameEnteredTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstLine"
        app:layout_constraintStart_toEndOf="@id/nameTV"
        android:layout_margin="18dp"
        tools:text="moaz"
        android:textColor="@color/blue"
        android:textSize="20sp"
        />

    <View
        android:id="@+id/secondLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/nameTV"
        android:background="@color/black"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/phoneTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameTV"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Phone: "
        android:textSize="28sp"
        android:layout_margin="12dp"
        android:textColor="@color/purple_700"
        />

    <TextView
        android:id="@+id/phoneEnteredTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameTV"
        app:layout_constraintStart_toEndOf="@id/phoneTV"
        android:layout_margin="20dp"
        tools:text="01233135826"
        android:textColor="@color/blue"
        android:textSize="20sp"
        />

    <View
        android:id="@+id/thirdLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/phoneTV"
        android:background="@color/black"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/emailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phoneTV"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Email: "
        android:textSize="28sp"
        android:layout_margin="12dp"
        android:textColor="@color/purple_700"
        />

    <TextView
        android:id="@+id/emailEnteredTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phoneEnteredTV"
        app:layout_constraintStart_toEndOf="@id/emailTV"
        android:layout_margin="20dp"
        tools:text="42020340@hti.edu.eg"
        android:textColor="@color/blue"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/deleteIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_margin="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>